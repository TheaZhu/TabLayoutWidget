<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thea.tablayout.MainActivity">

    <com.thea.widget.tablayout.BottomTabLayout
        android:id="@+id/btl"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#212121"
        app:tabTextColor="@color/grey_600"
        app:showSelectedTabAnimation="true"
        app:tabSelectedTextColor="@android:color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_above="@id/btl"
        android:background="@drawable/elevation_shadow_8dp"/>
</RelativeLayout>
